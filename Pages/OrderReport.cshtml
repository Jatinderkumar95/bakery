@page
@model bakery.Pages.OrderReportModel
@{
}

<form method="post">
    <table class="table">
        <tr>
            <th>Id</th>
            <th>OrderEmail</th>
            <th>UnitPrice</th>
            <th>SubscribeNewsLetter</th>
        </tr>
        @for(int i = 0;i < Model.Orders.Count; i++)
        {
            <tr>
                <td>
                    <input type="hidden" asp-for="Orders[i].Id" />
                    @Model.Orders[i].Id</td>
                <td>@Model.Orders[i].OrderEmail</td>
                <td>@Model.Orders[i].UnitPrice</td>
                <td><input asp-for="Orders[i].SubscribeNewsLetter" /> </td>
            </tr>
        }
    </table>
    <button type="submit">Submit</button>
</form>
