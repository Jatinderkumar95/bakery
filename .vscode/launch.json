    "version": "0.2.0",
    "configurations": [
    {
        "name": "Pages",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "watch",
        "program": "${workspaceFolder}/bin/Debug/net8.0/bakery.dll",
        "args": [],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/Views"
        }
    }
    ]
}